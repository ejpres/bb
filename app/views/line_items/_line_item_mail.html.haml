%tr.line_item{ :id => (line_item == @current_item) && 'current_item'}
  %td.quantity= line_item.quantity
  %td.product= link_to line_item.product.name + ' ' + line_item.product.sku, {:controller => 'products', :action => 'show', :id => line_item.product.id }
  %td.price= number_to_currency(line_item.product.price, :format => "%n %u", :unit => "€", :seperator => ",")
  %td.total_price= number_to_currency(line_item.total_price, :format => "%n %u", :unit => "€", :seperator => ",")
